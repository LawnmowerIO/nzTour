@import 'nib'

$buttonColor = #868686
$successColor = #60bd68
$dangerColor = #ec1d18
$stepColor = #117ca0
$lengthColor = #CCC

nz-tour
    &.hidden
        #nzTour-box
            transform: scale(0)
        .nzTour-masks .mask
            opacity:0
    #nzTour-box-wrap
        position: absolute
        width: auto
        height: auto
        left: 50%
        top: 50%
        transform: translate(-50%,-50%)
        display: block
        z-index: 999999999999
    #nzTour-box
        width: 250px
        min-height: 80px
        max-height: 120px
        padding: .5em
        background: #fff
        box-shadow: 0 6px 19px 2px rgba(0,0,0,0.14)
        border-radius: 2px
        transition:all .3s ease
        transform: scale(1)
    #nzTour-tip
        position: absolute
        display: block
        width: 0
        height: 0
        &.hidden
            opacity:0
        &.top
            top: -5px
            border-left: 5px solid transparent
            border-right: 5px solid transparent
            border-bottom: 5px solid white
        &.bottom
            bottom: -5px
            border-left: 5px solid transparent
            border-right: 5px solid transparent
            border-top: 5px solid white
        &.left
            left: 5%
        &.center
            left: 50%
        &.right
            left: 95%
        &.side
            &.left
                left: -10px
                border-top: 5px solid transparent
                border-bottom: 5px solid transparent
                border-right: 5px solid white
            &.right
                right: -10px
                border-top: 5px solid transparent
                border-bottom: 5px solid transparent
                border-left: 5px solid white
            &.top
                top: 5px
            &.bottom
                bottom: 5px;
            &.center
                top:50%
                transform:translate(0,-50%);
    #nzTour-close
        position: absolute
        top: 2px
        right: 2px
        width: 12px
        height: 12px
        background: alpha($dangerColor, .7)
        border-radius: 0 2px 0 3px
        font-size: 7px
        color: #fff
        cursor: pointer
        text-align: center
        padding: 2px
        transition: all .2s ease
        &:hover
            background:$dangerColor
    #nzTour-content
        width: 100%
        height: 100%
        overflow-x: hidden
        overflow-y: scroll
        margin-bottom: 32px
    #nzTour-step
        width: 24px
        height: 24px
        background: $stepColor
        color: white
        position: absolute
        bottom: 0.7em
        left: 0.7em
        font-size: 12px
        padding: 6px 0
        font-weight: bold
        text-align: center
        border-radius: 100%
        z-index: 1
    #nzTour-length
        width: 24px
        height: 24px
        background: $lengthColor
        color: white
        position: absolute
        bottom: 0.7em
        left: 2.2em
        font-size: 12px
        padding: 6px 0
        font-weight: bold
        text-align: center
        border-radius: 100%
        z-index: 0
    #nzTour-actions
        position absolute
        bottom: .5em
        right: .5em
        height: 24px
        button
            height:100%
            border:none
            border-radius: 2px
            font-size:.75em
            padding: 4px 7px
            color:white
            background-color: $buttonColor
            &:hover
                background-color: darken($buttonColor, 20%)
            ease(all, .2s)
            &[disabled]
                opacity:.2
                &:hover
                    opacity:.2
            &:focus, &:focus:active
                outline: none
            &.success
                background-color: $successColor
                &:hover
                    background-color: darken($successColor, 20%)
            &.danger
                background-color: $dangerColor
                &:hover
                    background-color: darken($dangerColor, 20%)
    #nzTour-previous
            margin-right: .5em
    .nzTour-masks
        .mask
            position:absolute
            z-index: 99999999
            &.top, &.bottom
                width:100%
                height:0
                left:0
            &.left, &.right
                width:0
                height:100%
                top:0
            &.top
                top:0
            &.bottom
                bottom:0
            &.left
                left:0
            &.right
                right:0
                
